
<style>
body {
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(to bottom right, #ffdde1, #d63384);
}

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.brand {
  text-align: center;
  margin-bottom: 20px;
  animation: fadeIn 1.5s ease-in-out;
}

.brand h1 {
  font-size: 2.5rem;
  color: #d63384;
  font-weight: bold;
}

.brand p {
  font-size: 1.2rem;
  color: #d63384;
}

.login-card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  padding: 3.5rem;
  border-radius: 15px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 400px;
  position: relative;
  border: 2px solid #d63384;
  animation: slideIn 1s ease-in-out;
}

.login-title {
  font-size: 1.8rem;
  font-weight: bold;
  color: #d63384;
  background: white;
  padding: 0 15px;
  position: absolute;
  top: -15px;
  left: 50%;
  transform: translateX(-80%);
  border-radius: 5px;
}

.form-label {
  color: #d63384;
}

.form-control {
  width: 100%;
  border-radius: 8px;
  border: 2px solid #d63384;
  padding: 12px;
  margin-bottom: 15px;
  transition: 0.3s;
}

.form-control:focus {
  border-color: #d63384;
  box-shadow: 0 0 10px rgba(109, 11, 60, 0.5);
}

.form-control:hover {
  border-color: rgb(153, 20, 87);
}

.btn-primary {
  background: #d63384;
  border: none;
  padding: 12px;
  border-radius: 8px;
  font-weight: bold;
  color: white;
  width: 100%;
  transition: all 0.3s ease-in-out;
}

.btn-primary:hover {
  background: #b0296e;
  transform: scale(1.05);
  box-shadow: 0 5px 15px rgba(255, 117, 143, 0.3);
}

.btn-link {
  color: #d63384;
  font-size: 0.9rem;
  transition: all 0.3s ease-in-out;
}

.btn-link:hover {
  color: #b0296e;
  text-decoration: underline;
  transform: scale(1.1);
}


.error-message {
  color: #d9534f; /* Red color for errors */
  background: #f8d7da;
  border: 1px solid #d63384;
  padding: 10px;
  margin-bottom: 15px;
  border-radius: 8px;
  text-align: center;
  font-weight: bold;
}


/* Animations */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-20px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideIn {
  from { opacity: 0; transform: translateY(50px); }
  to { opacity: 1; transform: translateY(0); }
}

</style>




<div class="login-container">
  <div class="brand">
    <h1><i class="fas fa-comments"></i> Catchup</h1>
    <p>Connect through thoughts</p>
  </div>

  <div class="login-card">
    <span class="login-title">Reset Password</span>
    <%= form_with url: password_resets_path, method: :post, local: true do |form| %>
      <div>
        <%= form.label :email, "Enter your email", class: "form-label" %>
        <%= form.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
      </div>

      <!-- Display error messages -->
      <% if flash[:alert] %>
        <p class="error-message"><%= flash[:alert] %></p>
      <% end %>

      <%= form.submit "Send Reset Instructions", class: "btn btn-primary" %>
    <% end %>

    <div class="link-container">
      <%= link_to "Back to Login", login_path, class: "btn btn-link" %>
    </div>
  </div>
</div>


