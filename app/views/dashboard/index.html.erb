<style>
body {
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(to bottom right, #ffdde1, #d63384);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  margin: 0;
  text-align: center;
}

.welcome-container {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  padding: 3rem;
  border-radius: 15px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  border: 2px solid #d63384;
  animation: fadeIn 1s ease-in-out;
  max-width: 400px;
}

h2 {
  color: #d63384;
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 10px;
}

p {
  font-size: 1.2rem;
  color: #333;
  font-weight: 500;
  margin-bottom: 20px;
}

.btn {
  display: inline-block;
  padding: 12px 20px;
  border-radius: 8px;
  font-weight: bold;
  text-decoration: none;
  transition: all 0.3s ease-in-out;
  cursor: pointer;
  margin:0.5rem;
}

.btn-primary {
  background: #d63384;
  color: white;
  border: none;
  margin-right: 10px;
}

.btn-primary:hover {
  background: #b0296e;
  transform: scale(1.05);
  box-shadow: 0 5px 15px rgba(255, 117, 143, 0.3);
}

.btn-danger {
  background: #d9534f;
  color: white;
  border: none;
}

.btn-danger:hover {
  background: #b52b27;
  transform: scale(1.05);
  box-shadow: 0 5px 15px rgba(255, 87, 87, 0.3);
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-20px); }
  to { opacity: 1; transform: translateY(0); }
}

</style>



<h2>Welcome, <%= @user.name %>!</h2>
<p>You have <%= @user.friends.count %> friends.</p>

<%= link_to "View Profile", account_path, class: "btn btn-primary" %>
<%= button_to "Logout", logout_path, method: :delete, class: "btn btn-danger" %>
