<div class="container">
  <div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body text-center">
      <% if @user.profile_picture.present? %>
        <%= image_tag @user.profile_picture, class: "rounded-circle", width: 100 %>
      <% end %>
      <h3 class="mt-3"><%= @user.name %></h3>
      <p><%= @user.about %></p>
      <p><strong>Friends:</strong> <%= @friends_count %></p>
      <p><strong>Thoughts:</strong> <%= @user.thoughts.count %></p>

      <%= link_to "Edit Profile", edit_account_path, class: "btn btn-primary" %>
    </div>
  </div>

  <h4 class="mt-4">My Thoughts</h4>
  <div class="list-group">
    <% if @thoughts.present? %>
      <% @thoughts.each do |thought| %>
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <p class="mb-0"><%= thought.content %></p>
          
          <!-- Edit & Delete Buttons -->
          <div>
            <%= link_to "Edit", edit_thought_path(thought), class: "btn btn-sm btn-warning mx-1" %>
            <%= link_to 'Delete Thought', thought_path(thought), 
              method: :delete, 
              data: { confirm: "Are you sure you want to delete this thought?" }, 
              class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No thoughts available.</p>
    <% end %>
  </div>

  <%= button_to "Log out from all devices", logout_all_path, method: :delete, data: { confirm: "Are you sure?" } %>

</div>
