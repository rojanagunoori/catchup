<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Catchup</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "application", type: "module" %>

    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <%= javascript_importmap_tags %>

    <meta name="csrf-token" content="<%= form_authenticity_token %>">

     <!-- Custom Styles -->
  <style>
    /* General Styling */
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to bottom right, #ffdde1, #d63384);
      min-height: 100vh;
      margin: 0;
      padding-top: 60px; /* Offset for fixed navbar */
    }

    /* Navbar */
    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background: rgba(255, 255, 255, 0.9);
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      z-index: 1000;
    }

    .navbar-brand {
      font-size: 1.5rem;
      font-weight: bold;
      color: #d63384;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .nav-links {
      display: flex;
      gap: 15px;
      list-style-type:none;
    }

    .nav-item {
      width:100%;
      padding:10px;
      font-size: 1.1rem;
      color: #d63384;
      font-weight: 500;
      transition: all 0.3s ease-in-out;
    }

    .nav-item:hover {
      color: #b0296e;
      background-color: #d63384;
      
    }
    .nav-link {
      text-decoration:none;
      font-size: 1.1rem;
      color: #d63384;
      font-weight: 500;
      transition: all 0.3s ease-in-out;
    }

    .nav-link:hover {
      color: #b0296e;
      
    }

    /* Responsive Navbar Menu */
    .menu-toggle {
      display: none;
      font-size: 1.8rem;
      cursor: pointer;
      color: #d63384;
    }

    @media (max-width: 768px) {
      .nav-links {
        display: none;
        flex-direction: column;
        position: absolute;
        top: 40px;
        right: 10px;
        background: white;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        padding: 10px;
        border-radius: 8px;
        width:100%;
        text-align:center;
        align-items:center;
       
      }
      .nav-links.show {
        display: flex;
      }
      .menu-toggle {
        display: block;
      }
    }

    /* Floating Share Button */
    .floating-button {
      
   
      background: #d63384;
      color: white;
      font-size: 1.2rem;
      padding: 8px 10px;
      border-radius: 50px;
      display: flex;
      align-items: center;
      gap: 10px;
      cursor: pointer;
      transition: all 0.3s ease-in-out;
      box-shadow: 0 5px 15px rgba(214, 51, 132, 0.3);
    }

    .floating-button:hover {
      background: #b0296e;
      transform: scale(1.05);
    }

    /* Thought Sharing Box */
    .share-box {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
      width: 80%;
      max-width: 500px;
      text-align: center;
    }

    .textarea {
      width: 100%;
      height: 100px;
      border: 1px solid #ddd;
      padding: 10px;
      border-radius: 8px;
      font-size: 1rem;
    }

    .share-actions {
      display: flex;
      justify-content: space-between;
      margin-top: 10px;
    }

    .btn-share {
      background: #d63384;
      color: white;
      padding: 10px 15px;
      border-radius: 8px;
      border: none;
      cursor: pointer;
      transition: all 0.3s ease-in-out;
    }

    .btn-share:hover {
      background: #b0296e;
      transform: scale(1.05);
    }

    /* Thought List */
    .thought-list {
      margin-top: 20px;
    }

    .thought-item {
      background: white;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      margin-bottom: 15px;
      display: flex;
      align-items: flex-start;
      gap: 15px;
    }

    .thought-avatar {
      width: 50px;
      height: 50px;
      border-radius: 50%;
    }

    .thought-content {
      flex: 1;
    }

    .thought-header {
      display: flex;
      justify-content: space-between;
      font-size: 0.9rem;
      color: gray;
    }

    .thought-text {
      margin-top: 5px;
      font-size: 1rem;
    }

  </style>
 
    </head>
  <body>
    <% if logged_in? %>
      <nav class="navbar">
        <!--div class="container-fluid"-->
          <!-- Left side: Company Icon and Name -->
          <a class="navbar-brand" href="#">
            <i class="fas fa-comments"></i> Catchup
          </a>
          <!-- Right side: Navigation links >
          <div class="collapse navbar-collapse justify-content-end"-->
          <div class="menu-toggle" onclick="toggleMenu()"><i class="fas fa-bars"></i></div>
            <ul class="nav-links">
              <li class="nav-item"><%= link_to 'Home', thoughts_path, class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to 'Friends', friends_path, class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to 'Account', account_path, class: 'nav-link' %></li>
              <%= button_to "Logout", logout_path, method: :delete, class: "floating-button" %>


            </ul>
          </div>
        <!--/div-->
      </nav>
    <% end %>
    
    <div class="container mt-4">
    
    
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>
      
      <%= yield %>
    </div>

    <script>
    function toggleMenu() { document.querySelector(".nav-links").classList.toggle("show"); }
    function toggleShareBox() { document.getElementById("shareBox").style.display = "block"; }
  </script>
  </body>
</html>


